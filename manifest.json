{
  "manifest_version": 3,
  "name": "Lingua Tab — Daily Word for Your New Tab",
  "version": "1.0.4",
  "description": "Learn a new word every day in your new tab — meaning, translation, and example on a calm, animated background.",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinguaTab Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  }
}
