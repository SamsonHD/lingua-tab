{
  "manifest_version": 3,
  "name": "LinguaTab",
  "version": "1.0.0",
  "description": "LinguaTab turns your browser's new tab into a tiny moment of discovery. Every day, you'll see one carefully selected word from your chosen language.",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinguaTab Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  }
}
